rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read/write access to hrms_data document for all authenticated and unauthenticated users
    // This is for the HRMS application data storage
    match /hrms_data/{document} {
      allow read, write: if true;
    }
    
    // Allow access to test documents
    match /hrms_data/__test__ {
      allow read, write: if true;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

